{
  "name": "tour-de-ligne-server",
  "version": "2.0.0",
  "description": "Serveur REST pour la gestion du tour de ligne",
  "main": "serveur-rest.js",
  "scripts": {
    "start": "node serveur-rest.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "rest",
    "express",
    "sqlite",
    "realtime"
  ],
  "author": "Votre nom",
  "license": "MIT"
}
